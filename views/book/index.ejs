<%- include("../partials/layout-start", {title}) %>
<%- include("../partials/menu") %>

<h1 class="mt-3"><%= title %></h1>

<a class="btn btn-sm btn-primary" href="/books/create">Добавить книгу</a>

<% if(books.length) { %>
    <table class="table table-dark table-striped table-sm mt-3">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Название книги</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% books.map((el, idx) => { %>
                <%- include("../partials/row-book", {idx, el}) %>
            <% }); %>
        </tbody>
    </table>

<% } else { %>
    <h3 class="mt-5">Книг пока нет</h3>
<% } %>


<%- include("../partials/layout-end") %>
